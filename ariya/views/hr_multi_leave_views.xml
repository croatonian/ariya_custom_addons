<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_multi_leave_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit</field>
        <field name="model">hr.leave.generate.multi.wizard</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_generate_multi_wizard_view_form"/>
        <field name="arch" type="xml">
        <field name="holiday_status_id" position="after">
            <field name="leave_type_name" invisible = "true"/>
            <field name="reason" invisible = "leave_type_name != 'Відрядження'" />
            <field name="location" invisible = "leave_type_name != 'Відрядження'" widget="many2many_tags" domain="[('country_id','=','Україна')]"/>
            <field name="reason_name" invisible = "true"/>
            <field name="location_name" invisible = "true"/>
        </field>
        </field>
    </record>
</odoo>
