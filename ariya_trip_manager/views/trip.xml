<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="ariya_trip_manager.view_trip_list">
            <field name="name">Trips</field>
            <field name="model">ariya_trip_manager.trip</field>
            <field name="arch" type="xml">
                <list default_order="create_date desc">
                    <field name="name"/>
                    <field name="employees_ids" widget="many2many_tags"/>
                    <field name="destination_names"/>
                    <field name="comment"/>
                    <field name="reason_for_trip_name"/>
                    <field name="date_from" string="Початок"/>
                    <field name="date_to" string="Кінець"/>
                    <field
                        name="state"
                        widget="badge"
                        decoration-success="state in ('validated', 'done')"
                        decoration-muted="state == 'draft'"
                        decoration-warning="state == 'to_validate'"
                        decoration-danger="state == 'rejected'"
                    />
                    <field
                        name="validation_status"
                        widget="badge"
                        decoration-info="validation_status == 'pending'"
                        decoration-danger="validation_status == 'rejected'"
                        decoration-success="validation_status == 'validated'"
                    />

                </list>
            </field>
        </record>

